{
  "extends": [
    "standard",
    "plugin:promise/recommended"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", "tab", {
      "CallExpression": {"arguments": 0},
      "MemberExpression": 0,
      "SwitchCase": 1
    }],
    "no-tabs": 0,
    "no-else-return": "error"
  }
}
